<h1>Join our Camp today!</h1>
<% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
    <p style="color:red"><%= error %></p>
    <% end %>
<% end %>
<%= form_for @camper do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :age %>
    <%= f.text_field :age %>
    <%= f.submit %>
<% end %>